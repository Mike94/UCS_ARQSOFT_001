@model CargoViewModel
@using SGI.MVCCliente.ViewModel
@using SGI.MVCCliente.Helpers

@using (Html.BeginForm("Guardar", "Cargo", FormMethod.Get, new { @id = "formEdit" }))
{
    <h4>
        @Html.DisplayFor(model => model.EntityCargo.NombreCargo)
    </h4>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.HiddenFor(model => model.EntityCargo.Key.IDCargo)

                <div class="form-group">
                    <div class="col-sm-12 text-left">
                        @Html.Label("Nombre cargo")

                        @Html.TextBoxFor(model => model.EntityCargo.NombreCargo,
                    new
                    {
                        @class = "form-control",
                        data_msg_required = "El campo Nombre cargo es requerido",
                        data_rule_required = "true"
                    })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12 text-left">
                        @Html.LabelFor(model => model.EntityCargo.Descripcion)

                        @Html.TextBoxFor(model => model.EntityCargo.Descripcion,
                new
                {
                    @class = "form-control",
                    data_msg_required = "El campo Descripcion es requerido",
                    data_rule_required = "true"
                })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6 text-left">
                        @Html.Label("Estado")

                        <div class="inline-control" id="estado-grupo">
                            <div class="col-sm-6 radio">
                                <label>
                                    @Html.RadioButtonFor(model => model.EntityCargo.Estado, Constantes.Activo,
                                    new
                                    {
                                        data_rule_radio_custom = "#estado-grupo",
                                        data_msg_radio_custom="El campo Estado es requerido"
                                    })
                                    @Constantes.CadenaActivo
                                </label>
                            </div>

                            <div class="col-sm-6 radio">
                                <label>
                                    @Html.RadioButtonFor(model => model.EntityCargo.Estado, Constantes.Inactivo)
                                    @Constantes.CadenaInactivo
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                    @*OPCIONES*@
                    <div class="form-group" id="opciones">
                        <div class="text-center">
                            <button id="GuardarButton" type="button" class="btn btn-default" onclick="GuardarCargo();">
                                <span class="glyphicon glyphicon-plus"></span>&nbsp;Guardar
                            </button>
                            <button id="EliminarButton" type="button" class="btn btn-danger" onclick="HideModal();">
                                <span class="glyphicon glyphicon-trash"></span>&nbsp;Cancelar
                            </button>
                        </div>
                    </div>

                </div>

        </div>
    </div>
}