<!DOCTYPE html>
<html>
<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />

    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/jquery-ui-1.10.4.custom.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/perfect-scrollbar.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.4.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.mobile.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"  ></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/locales/bootstrap-datepicker.es.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/slide-menu.js")" type="text/javascript"  ></script>
    <script src="@Url.Content("~/Scripts/perfect-scrollbar.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Base/Site.js")" type="text/javascript"  ></script>

</head>

<body>
    <!-- Start Header-->
    <header id="header">
        <div id="logo-group">

        </div>
        <div id="hide-menu" class="btn-header pull-right">
            <span>
                <a class="glyphicon glyphicon-th-list" href="#" data-toggle="#main" title="Menu"> </a>
            </span>
            <span>
                @Html.ActionLink(" ", "CerrarSesion", "Cuenta", null, new { @class = "glyphicon glyphicon-log-out", @title = "Cerrar Sesion" })
            </span>
        </div>
    </header>
    <!--  END Header-->

    <div id="layout">
        <!-- Start Middle-->
        <aside id="left-panel" class="ps-container ps-active-y open-panel">
            <div class="login-info">
                <span>
                    <a href="#">
                        @Html.Label(SGI.MVCCliente.Helpers.SessionHelper.NombreUsuario.ToUpper())
                    </a>
                </span>
            </div>

            <!-- nav links-->
            <nav>
                <ul>
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>
                        <a href="#">
                            Pedidos
                            <b class="collapse-sign">
                                <span class="ui-icon ui-icon-circlesmall-plus"></span>
                            </b>
                        </a>
                        <ul>
                            <li>@Html.ActionLink("Generar Pedido", "Generar", "Pedido")</li>
                            <li>@Html.ActionLink("Seguimiento Pedido", "Seguimiento", "Pedido")</li>
                            <li>@Html.ActionLink("Cerrar Pedido", "Cierre", "Pedido")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            Inventarios
                            <b class="collapse-sign">
                                <span class="ui-icon ui-icon-circlesmall-plus"></span>
                            </b>
                        </a>
                        <ul>
                            <li><a href="#">Productos Stock</a></li>
                            <li><a href="#">Calendario</a></li>
                            <li><a href="#">Alertas de Sistema</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            Mantenimientos
                            <b class="collapse-sign">
                                <span class="ui-icon ui-icon-circlesmall-plus"></span>
                            </b>
                        </a>
                        <ul>
                            <li>@Html.ActionLink("Tienda", "Index", "Tienda")</li>
                            <li>@Html.ActionLink("Cargo", "Index", "Cargo")</li>
                            <li>@Html.ActionLink("Empleado", "Index", "Empleado")</li>
                            <li>@Html.ActionLink("Empresa", "Index", "Empresa")</li>
                            <li>@Html.ActionLink("Grupo de Productos", "Index", "Grupo")</li>
                            <li>@Html.ActionLink("Producto", "Index", "Producto")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            Seguridad
                            <b class="collapse-sign">
                                <span class="ui-icon ui-icon-circlesmall-plus"></span>
                            </b>
                        </a>
                        <ul>
                            <li><a href="#">Roles / Usuario</a></li>
                            <li><a href="#">Menu</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </aside>

        <section id="main" class="open-main">
            <div id="ribbon">
                @Html.Raw(SGI.MVCCliente.Helpers.SessionHelper.Ribbon(this.Request.Url))
            </div>
            <div id="content-body">
                @RenderBody()
            </div>
        </section>
        <!-- End Middle-->
    </div>

    <!-- Start Footer-->
    <footer class="page-footer">
        <div class="row">
            <div class="txt-color-white">© Copyright 2014 | Grupo 2</div>
        </div>
    </footer>
    <!-- END Footer-->

    <div class="shadow"></div>

    <div class="modal fade" id="ModalPlantilla">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><span id="titulo"></span></h4>
                </div>
                <div class="modal-body">
                    <div id="contenido"></div>
                </div>
                <div class="modal-footer">
                    <div id="pieModal">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bs-example-modal-sm" id="ModalShort">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><span id="titulo"></span></h4>
                </div>
                <div class="modal-body">
                    <div id="contenido"></div>
                </div>
                <div class="modal-footer">
                    <div id="pieModal">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bs-example-modal-sm" id="ModalError">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header header-error">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><span id="titulo"></span></h4>
                </div>
                <div class="modal-body">
                    <div>
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        &nbsp;
                        <span id="contenido">
                        </span>
                    </div>

                </div>
                <div class="modal-footer">
                    <div id="pieModal" class="text-center">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bs-example-modal-sm" id="ModalSuccess">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header header-success">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><span id="titulo"></span></h4>
                </div>
                <div class="modal-body">
                    <div>
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        &nbsp;
                        <span id="contenido">
                        </span>
                    </div>

                </div>
                <div class="modal-footer">
                    <div id="pieModal" class="text-center">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">
                            <span class="glyphicon glyphicon-trash"></span>&nbsp;Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
