@model SGI.MVCCliente.ViewModel.GrupoViewModel
@using SGI.MVCCliente.ViewModel
@using SGI.MVCCliente.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Hidden("Url_Grupo_GridPV", Url.Action("GrupoGridPV", "Grupo"), new { @id = "Url_GrupoGridPV" })
@Html.Hidden("Url_Grupo_Guardar", Url.Action("Guardar", "Grupo"), new { @id = "Url_Grupo_Guardar" })
@Html.Hidden("Url_Grupo_Add", Url.Action("Add", "Grupo"), new { @id = "Url_Grupo_Add" })
@Html.Hidden("Url_Grupo_Edit", Url.Action("Edit", "Grupo"), new { @id = "Url_Grupo_Edit" })
@Html.Hidden("Url_Grupo_InnerEdit", Url.Action("InnerEdit", "Grupo"), new { @id = "Url_Grupo_InnerEdit" })

@using (Html.BeginForm("Index", "Grupo"))
{
    <h3 class="page-header">
        <span>Información de Grupos</span>
    </h3>

    <div class="panel panel-default">
        <div class="panel-body">

            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-4">
                        @Html.Label("Descripcion Grupo")

                        @Html.TextBoxFor(model => model.EntityGrupoPaginacion.DescripcionCorta, new { @class = "form-control" })
                    </div>

                    <div class="col-sm-offset-0 col-sm-4">
                        @Html.LabelFor(model => model.EntityGrupoPaginacion.Estado)

                        <div class="inline-control">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.EntityGrupoPaginacion.Estado, Constantes.Activo)
                                @Constantes.CadenaActivo
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.EntityGrupoPaginacion.Estado, Constantes.Inactivo)
                                @Constantes.CadenaInactivo
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.EntityGrupoPaginacion.Estado, Constantes.UnoNegativo)
                                @Constantes.CadenaTodos
                            </label>
                        </div>
                    </div>
                </div>

                @*OPCIONES*@
                <div class="form-group">
                    <div class="text-center">
                        <button id="searchButton" type="button" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span>&nbsp;Buscar
                        </button>
                        <button id="addButton" type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-plus"></span>&nbsp;Agregar
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <div id="GrupoGridPV">
        @if (Model.ListGrupoPaginado.Count > Constantes.Cero)
        {
            @Html.Partial(Constantes.GrupoGridPV)
        }
    </div>

    <script src="~/Scripts/Views/Grupo.js"></script>
}

